---
import Base from "@/layouts/Base.astro";
import Banner from "@/layouts/components/Banner.astro";
import KeyFeatures from "@/layouts/components/KeyFeatures.astro";
import Service from "@/layouts/components/Service.astro";
import Strengths from "@/components/Strengths.astro";
import Event from "@/layouts/components/Event.astro";
import GlobalPro from "@/layouts/components/GlobalPro.astro";
import Business from "@/layouts/components/Business.astro";
import Cta from "@/layouts/partials/Cta.astro";

import ParallaxPanel from "@/layouts/components/ParallaxPanel";
import AosComponent from "@/layouts/components/react-ui/aos-component";

import { getEntryBySlug } from "astro:content";

const homepage = await getEntryBySlug("homepage", "index");

// src/content/homapge/index.md
const { banner, key_features, service, strengths, event, global_pro, business } = homepage.data;
---

<Base>
  <!-- banner -->
  <!-- <Banner banner={banner} /> -->
  <!-- parallax -->
  <ParallaxPanel client:load />
  <!-- key features -->
  <AosComponent client:load>
    <KeyFeatures key_features={key_features} />
  </AosComponent>

  <!-- service -->
  <AosComponent client:load>
    <Service service={service} />
  </AosComponent>

  <!-- authentication -->
  <AosComponent client:load>
    <Strengths strengths={strengths} />
  </AosComponent>

  <!-- event -->
  <AosComponent client:load>
    <Event event={event} />
  </AosComponent>

  <!-- global pro -->
  <AosComponent client:load>
    <GlobalPro global_pro={global_pro} />
  </AosComponent>

  <!-- business -->
  <AosComponent client:load>
    <Business business={business} />
  </AosComponent>

  <!-- call to action -->
  <!-- <Cta /> -->
</Base>

---
const { service } = Astro.props;
const { title, description, service_list } = service;

import { InfiniteMovingCardsComponent } from './InfiniteMovingCardsComponent';
---


<section id="service" class="services scroll-mt-24 bg-transparent">
  <div class="container">
    <div class="row">
      <div class="mx-auto text-center lg:col-8">
        <h2 class="text-xl md:text-3xl font-bold">{title}</h2>
        <p class="mt-4">{description}</p>
      </div>
    </div>
    <div class="row mt-8">
      <InfiniteMovingCardsComponent service_list={service_list} client:load />
    </div>
  </div>
</section>

---
import GlobalProSlider from "@/layouts/function-components/GlobalProSlider";
const { global_pro } = Astro.props;
---

<section id="global" class="reviews scroll-mt-[134px]">
  <div class="container">
    <div class="row justify-center">
      <div class="lg:col-6">
        <h2 class="text-2xl md:text-5xl font-medium text-center mb-2 md:mb-10">{global_pro.title}</h2>
      </div>
      <div class="lg:col-4">
        <p>
          {global_pro.description}
        </p>
      </div>
    </div>
    <div class="row mt-10">
      <div class="col-12">
        <GlobalProSlider list={global_pro.pro_list} client:load />
      </div>
    </div>
  </div>
</section>
